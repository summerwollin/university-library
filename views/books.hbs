<a href="/books/add"><button type="button" name="add">Add New Book</button></a>
{{#books}}
  <article>
    <img class="bookCover" src="{{cover_url}}" alt="">
    <h2>{{title}}</h2>
    <a href="/books/{{id}}/delete"><button type="button" name="delete">Delete</button></a>
    <h3>
      {{authors}}
    </h3>
    <h3><i>{{genre}}</i></h3>
    <p>{{description}}</p>
  </article>
{{/books}}
